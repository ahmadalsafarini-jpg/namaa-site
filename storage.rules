rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to access their own files organized by user/application/category
    match /users/{userId}/applications/{applicationId}/{category}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins to access all files (optional - remove if not needed)
    match /users/{userId}/applications/{applicationId}/{category}/{fileName} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Fallback for any other files (legacy support)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
